<% products.forEach(product => { %>
<article class="home__products--phones">
    <div class="home__phone--container--1">
        <img class="home__img--cardProducts" src="/images/products/<%= product.image %>" alt="">
    </div>
    <div class="home__product--descripction">
        <p><%= product.name %></p>
        
        <% if (product.discount> 0) { %>
            
            <p class="home__strikethrough">$<%= product.price %>
            </p>
            <p class="home__price">$<%= formatNumber(product.price - (product.price * product.discount / 100)) %>
            </p>

            <% } else { %>

                <p class="home__price">$<%= formatNumber(product.price - (product.price * product.discount / 100)) %>
                </p>

                <% } %>
    </div>
    <a href="/products/<%= product.id %>" class="home__btn--details">Ver detalle</a>
</article>
<% }) %>