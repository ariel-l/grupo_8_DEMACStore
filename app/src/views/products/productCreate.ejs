<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body class="productCreate">
        <!-- Include Header -->
        <%- include('../partials/header.ejs') %>

            <div class="register__container--global register__first">
                <h2 class="register__title">Creación de productos</h2>
                <hr>
                <form action="/products/create" method="POST" class="productForm__container" enctype="multipart/form-data">
                    <div class="container__desktop">
                        <div class="box__datos">
                            <div class="input__container">
                                <label class="label-style" for="text">Nombre del producto</label>
                                <input class="input-style" type="text" name="name" placeholder="Ej: Samsung Galaxy M13" id="">
                            </div>
                            <div class="input__container">
                                <label class="label-style" for="text">Descuento</label>
                                <input class="input-style" type="text" name="discount" placeholder="Ej: 15" id="">
                            </div>
                        </div>
                        <div class="box__profile">
                            <div class="input__container">
                                <label class="label-style" for="text">Precio</label>
                                <input class="input-style" type="text" name="price" placeholder="Ej:$1500" id="">
                            </div>
                            <div class="input__container input__photo">
                                <label class="label-style" for="image">Elija la imagen del producto</label>
                                <input class="input" type="file" name="image" id="image">
                            </div>
                        </div>
                    </div>

                    <div class="input__container">
                        <label class="label-style" for="text">Categoría</label>
                        <select name="subcategory" id="" class="input-style select-category">
                            <option hidden selected>Selecciona una opción</option>
                            <option value="new">Nuevo</option>
                            <option value="refabrished">Refabricado</option>
                        </select>
                    </div>
                    <div class="input__container">
                        <label class="label-style" for="text">Marca</label>
                        <select name="brand" id="" class="input-style select-category">
                            <option hidden selected>Selecciona una opción</option>
                            <option value="Samsung">Samsung</option>
                            <option value="Motorola">Motorola</option>
                            <option value="Xiaomi">Xiaomi</option>
                            <option value="Apple">Apple</option>
                            <option value="Huawei">Huawei</option>
                            <option value="LG">LG</option>
                        </select>
                    </div>

                    <div class="container__desktop">
                        <div class="box__datos">
                            <div class="input__container">
                                <label class="label-style" for="text">Modelo</label>
                                <input class="input-style" type="text" name="model" placeholder="Ej: S20 FE 5G" id="">
                            </div>
                            <div class="input__container">
                                <label class="label-style" for="text">Sistema operativo</label>
                                <input class="input-style" type="text" name="os" placeholder="Ej: Android" id="">
                            </div>
                        </div>
                        <div class="box__profile">
                            <div class="input__container">
                                <label class="label-style" for="text">Pantalla</label>
                                <input class="input-style" type="text" name="screen" placeholder="Ej: 6.5 " id="">
                            </div>
                            <div class="input__container">
                                <label class="label-style" for="text">Memoria interna</label>
                                <input class="input-style" type="text" name="internalMemory" placeholder="Ej: 128" id="">
                            </div>
                        </div>

                    </div>
                    <div class="container__desktop">
                        <div class="box__datos">
                            <div class="input__container">
                                <label class="label-style" for="text">Ram</label>
                                <input class="input-style" type="text" name="ram" placeholder="Ej: 6 GB" id="">
                            </div>
                            <div class="input__container">
                                <label class="label-style" for="text">Procesador </label>
                                <input class="input-style" type="text" name="chipset" placeholder=" Ej: Snapdragon 865" id="">
                            </div>
                        </div>
                        <div class="box__profile">
                            <div class="input__container">
                                <label class="label-style" for="text">Cámara Frontal Principal</label>
                                <input class="input-style" type="text" name="frontCamera" placeholder="Ej: 32 Mpx" id="">
                            </div>
                            <div class="input__container">
                                <label class="label-style" for="text">Cámara Trasera Principal</label>
                                <input class="input-style" type="text" name="mainCamera" placeholder="Ej: 12 Mpx" id="">
                            </div>
                        </div>

                    </div>
                    <div class="container__desktop">
                        <div class="box__datos">
                            <div class="input__container">
                                <label class="label-style" for="text">Video</label>
                                <input class="input-style" type="text" name="video" placeholder="Ej: 4K@30fps" id="">
                            </div>
                            <div class="input__container">
                                <label class="label-style" for="text">Batería </label>
                                <input class="input-style" type="text" name="battery" placeholder="Ej: 4500 mAh" id="">
                            </div>
                        </div>
                        <div class="box__profile">
                            <div class="input__container">
                                <label class="label-style" for="text">Dimensiones</label>
                                <input class="input-style" type="text" name="dimensions" placeholder="Ej: 159.8 x 74.5 x 8.4 mm" id="">
                            </div>
                            <div class="input__container">
                                <label class="label-style" for="text">Peso</label>
                                <input class="input-style" type="text" name="weight" placeholder="Ej: 190 g" id="">
                            </div>
                        </div>

                    </div>
                    <div class="input__container  ">
                        <label class="label-style" for="text">Expandible</label>
                        <input class="input-style" type="text" name="cardSlot" placeholder="Ej: 1 TB" id="">
                    </div>

                    <div class="input__container textarea__container--global">
                        <label for="">Otras descripciones del producto:</label>
                        <div class="textarea__container">
                            <textarea class="input-style textarea__descripction" name="description" id="" cols="30" rows="10"></textarea>
                        </div>
                    </div>
                    <button class="form__button-blue btn btn__submit" type="submit">
                        <div class="button__container btn btn__submit">
                            Crear producto
                        </div>
                    </button>

                    <button class="form__button-blue">
                        <div class="button__container">
                            <a href="/products/edit" class="button__container btn btn__submit"> Modificar producto </a>
                        </div>
                    </button>

                </form>
            </div>
            <%- include('../partials/footer.ejs') %>
    </body>

</html>