<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {title: 'Inicia Sesión' }) %>

    <body class="login__body">
        <%- include('../partials/header.ejs') %>
            <div class="login">
                <div class="login__container--general">
                    <section class="form__container--login">

                        <span class="login__span">INICIAR SESIÓN</span>
                        <hr class="login__hr--first">
                        <form action="" method="">
                            <div class="form__start">
                                <div class="input__login--container">
                                    <!-- <span class="login__input--icon"><i class="fa-regular fa-envelope"></i></span> -->
                                    <input class="input__login--style" type="email" name="email" placeholder="Escribe aqui tu mail">
                                    <!-- <hr class="login__input--hr"> -->
                                </div>
                                <div class="input__login--container">
                                    <!-- <span class="login__input--icon"><i class="fa-regular fa-eye-slash"></i></span> -->
                                    <input class="input__login--style" type="password" name="pass" placeholder="Contraseña">
                                    <!-- <hr class="login__input--hr"> -->
                                    <span><a class="login__forgotYouPass" href="">¿Olvidaste tu contraseña?</a></span>
                                </div>

                                <div class="login__check">
                                    <label class="form__input--label-remember" for="recordar"> Recordar sesión </label>
                                    <input class="login__check--remember" type="checkbox" name="recordar" id="recordar">
                                </div>
                                <div class="button__login--container">
                                    <button type="submit" class="btn login__btn-submit">Iniciar sesión</button>
                                </div>
                                <label class="login__icons--loginWith" for="login_icons">Iniciar con</label>
                                <div class="login__icons">
                                    <span>
                                        <i class="fa-brands fa-google"></i>
                                        <i class="fa-brands fa-twitter"></i>
                                        <i class="fa-brands fa-facebook"></i>
                                    </span>
                                </div>
                                <div>
                                    <button type="submit" class="btn login__btn-submit"> <a href="/users/register">Registarme</a></button>
                                </div>
                            </div>
                        </form>

                    </section>
                </div>
            </div>
            <%- include('../partials/footer') %>
    </body>

</html>